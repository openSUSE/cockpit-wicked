Name:           cockpit-wicked
Version:        %{VERSION}
Release:        0
Summary:        Cockpit user interface for Wicked
License:        GPL-2.0-only
URL:            https://github.com/openSUSE/cockpit-wicked
Source:         https://github.com/openSUSE/cockpit-wicked/archive/refs/tags/%{version}.tar.gz#/cockpit-wicked-%{version}.tar.gz
%include %_sourcedir/node_modules_spec.inc
BuildArch:      noarch
BuildRequires:  nodejs-devel-default
BuildRequires:  nodejs-rpm-macros
BuildRequires:  appstream-glib

Requires:       cockpit-bridge
Requires:       wicked

BuildRequires:  nodejs-devel
BuildRequires:  npm

Conflicts:      cockpit-networkmanager

%description
Cockpit component for managing network configuration through Wicked

%prep
%setup -q -n %name
cp %{_sourcedir}/package-lock.json .
%prepare_node_modules %{_sourcedir}/node_modules.loc
# FIXME: workaround a permission problems in the tarball
chmod ug+x %{_builddir}/cockpit-wicked/node_modules/char-regex

%build
NPM_BIN_DIR=%{_builddir}/cockpit-wicked/node_modules/.bin
test -d $NPM_BIN_DIR || mkdir $NPM_BIN_DIR
ln -s ../webpack/bin/webpack.js ${NPM_BIN_DIR}/webpack
ln -s ../jest/bin/jest.js ${NPM_BIN_DIR}/jest
chmod +x node_modules/.bin/*
npm test
make clean

%install
NODE_ENV="production"
%make_install
appstream-util validate-relax --nonet %{buildroot}/%{_datadir}/metainfo/*

# drop source maps, they are large and just for debugging
find %{buildroot}%{_datadir}/cockpit/ -name '*.map' | xargs rm --verbose

%files
%doc README.md
%license LICENSE
%{_datadir}/cockpit
%{_datadir}/metainfo/*

%changelog
